<h3>Register Account</h3>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :email %> <br>
    <%= f.text_field :email%>
  </p>
  <p>
    <%= f.label :password%><br>
    <%= f.text_field :password%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<%end%>

<% if @user.errors.any? %>
  <p><%= pluralize(@user.errors.count, "error") %></p>
  <ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>
