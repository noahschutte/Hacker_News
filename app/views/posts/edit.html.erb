<h1>Edit Post</h1>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<% if @post.errors.any?%>
  <h2><%=pluralize(@post.errors.count, "error")%></h2>
  <ul>
    <%@post.errors.full_messages.each do |error|%>
      <li><%=error%></li>
    <%end%>
  </ul>
<%end%>
